{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components/*": [
                "src/components/*"
            ],
            "@layouts/*": [
                "src/layouts/*"
            ],
            "@pages/*": [
                "src/pages/*"
            ],
            "@assets/*": [
                "src/assets/*"
            ],
            "@styles/*": [
                "src/styles/*"
            ],
            "@include/*": [
                "src/layouts/include/*"
            ],
            "@hooks/*": [
                "src/hooks/*"
            ],
            "@proxies/*": [
                "src/proxies/*"
            ],
            "@types": [
                "src/types/types"
            ]
        }
    }
}