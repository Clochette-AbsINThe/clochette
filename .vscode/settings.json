{
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "astro", // Enable .astro
        "typescript", // Enable .ts
        "typescriptreact" // Enable .tsx
    ],
    "astro.typescript.diagnostics.enabled": true,
    "files.exclude": {
        "**/.git": true,
        "frontend/node_modules/": true,
    },
    "jest.coverageColors": {
        "covered": "rgba(9, 156, 65, 0.1)",
        "uncovered": "rgba(121, 31, 10, 0.1)",
        "partially-covered": "rgba(235, 198, 52, 0.1)",
    },
    "jest.rootPath": "frontend",
    "jest.debugMode": true,
    "jest.jestCommandLine": "npm run test --"
}